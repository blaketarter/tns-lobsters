<Page navigatedTo="pageNavigatedTo" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns="http://www.nativescript.org/tns.xsd">
  <Page.actionBar>
    <ActionBar title="Lobste.rs" />
  </Page.actionBar>
  <drawer:RadSideDrawer>
    <drawer:RadSideDrawer.mainContent>
      <ScrollView>
      <DockLayout stretchLastChild="true">
        <StackLayout class="post-inner" dock="top">
          <Label class="post-title" text="{{ post.title }}" textWrap="true" />
          <Label class="post-url" text="{{ post.url }}" tap="openUrl" />
          <Repeater class="post-tags-container" items="{{ post.tags }}">
            <Repeater.itemsLayout>
              <StackLayout orientation="horizontal" />
            </Repeater.itemsLayout>
            <Repeater.itemTemplate>
              <Label class="tag" text="{{ $value }}" />
            </Repeater.itemTemplate>
          </Repeater>
          <StackLayout class="post-info" orientation="horizontal">
            <Label class="post-score" text="{{ post.score }}" />
            <Label class="post-author" text="{{ ('via ' + post.submitter_user.username) }}" />
            <Label class="post-created" text="{{ post.created }}" />
          </StackLayout>
          <Label class="post-comments" text="{{ (post.comment_count + (post.comment_count === 1 ? ' comment' : ' comments')) }}"/>
        </StackLayout>
        <Repeater items="{{ comments }}" id="comment-list" dock="bottom">
          <Repeater.itemTemplate>
            <StackLayout class="comment-inner">
              <StackLayout class="comment-info" orientation="horizontal">
                <Label class="comment-score" text="{{ score }}" />
                <Label class="comment-author" text="{{ ('via ' + commenting_user.username) }}" />
                <Label class="comment-created" text="{{ created }}" />
              </StackLayout>
              <HtmlView class="comment-body" html="{{ comment }}" />
            </StackLayout>
          </Repeater.itemTemplate>
        </Repeater>
      </DockLayout>
      </ScrollView>
    </drawer:RadSideDrawer.mainContent>
    <drawer:RadSideDrawer.drawerContent>
      <StackLayout class="drawerContent">
        <StackLayout class="headerContent">
          <Label text="Header"/>
        </StackLayout>
        <StackLayout class="drawerMenuContent">
          <Label text="Item 1"/>
          <Label text="Item 2"/>
          <Label text="Item 3"/>
          <Label text="Item 4"/>
        </StackLayout>
      </StackLayout>
    </drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>
